    <Thickness x:Key="ParrafoLink">0,10,0,10</Thickness>
    <!--#endregion-->

    <!--#region Estilos TITULO (TextBlock)-->
    <Style x:Key="TextoTitulo1" TargetType="{x:Type Label}">
        <Setter Property="TextColor" Value="{StaticResource ColorTitulo1}"/>
        <Setter Property="FontSize" Value="{StaticResource FuenteTitulo1}"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontAttributes" Value="Italic"/>
    </Style>

