            <wc:PhTextBox x:Name="txtSearch"
                          PlaceholderText="Buscar paciente..."
                          Style="{StaticResource PhTextBoxNormal}" />
            <wc:IcoButton x:Name="btnSearch"
                          Grid.Column="1"
                          ImgSource="/Sgcm.UI.Desktop;component/Recursos/Imagenes/search_user_injured_32px.png"
                          Style="{StaticResource IcoButtonStyleBody}" />
            <wc:ImgButton x:Name="btnNewPatient"
                          Content="Nuevo paciente"
                          Grid.Column="3"
                          ImgSource="/Sgcm.UI.Desktop;component/Recursos/Imagenes/add_user_injured_32px.png"
                          Style="{StaticResource ImgButtonStyleFlat}"
                          ToolTip="Nuevo paciente..." />
        </Grid>
